{
    "manifest_version": 2,
    "name": "URL Copier",
    "version": "1.0",
    "description": "Copy current page URL with Ctrl+Shift+C",

    "permissions": [
      "activeTab",
      "clipboardWrite"
    ],

    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_start",
        "all_frames": true
      }
    ]
}
